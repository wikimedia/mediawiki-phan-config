{
	"name": "mediawiki/mediawiki-phan-config",
	"description": "Standard MediaWiki phan configuration",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/Continuous_integration/Phan",
	"authors": [
		{
			"name": "MediaWiki developers",
			"email": "wikitech-l@lists.wikimedia.org"
		}
	],
	"require": {
		"php": ">=7.2.0",
		"phan/phan": "3.2.4",
		"mediawiki/phan-taint-check-plugin": "3.1.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "31.0.0",
		"mediawiki/minus-x": "1.1.0",
		"ockcyp/covers-validator": "1.2.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"phpunit/phpunit": "^8.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"phpcs -sp",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
